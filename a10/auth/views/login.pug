extends layout

block content
  .w3-contatiner.w3-margin.w3-padding.w3-blue
    .w3-container.w3-blue
      h3 Instroduze as suas credenciais
    form.w3-container(action='/users/login' method='POST')
      label Username:
      input.w3-input(type="text" name="id")
      label Password:
      input.w3-input(type="password" name="password")
      input.w3-btn.w3-blue(type="submit" value="Enviar")
